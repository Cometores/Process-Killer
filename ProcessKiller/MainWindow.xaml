<Window x:Class="ProcessKiller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:ProcessKiller.Controls"
        xmlns:views="clr-namespace:ProcessKiller.Views"
        mc:Ignorable="d"
        Title="Process Killer" 
        Height="400" Width="600" 
        WindowStyle="None" 
        Background="{DynamicResource BackgroundColor}"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <controls:WindowTitleBar Grid.Row="0"/>

        <views:ProcessListView x:Name="processListView" Grid.Row="1"/>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Switch Theme" Click="SwitchTheme_Click" Width="100" Margin="5" />
            <Button Content="Refresh" Click="Refresh_Click" Margin="5"/>
            <Button Content="Kill Process" Click="KillProcess_Click" Margin="5"/>
        </StackPanel>
        
    </Grid>
</Window>