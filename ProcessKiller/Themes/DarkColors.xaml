<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Основные цвета -->
    <SolidColorBrush x:Key="BackgroundColor" Color="#222222"/>
    <SolidColorBrush x:Key="ForegroundColor" Color="White"/>
    
    <!-- Заголовки таблицы -->
    <SolidColorBrush x:Key="HeaderBackground" Color="#333333"/>
    <SolidColorBrush x:Key="HeaderForeground" Color="White"/>

    <!-- Скроллбар -->
    <SolidColorBrush x:Key="ScrollBarBackground" Color="Transparent"/>
    <SolidColorBrush x:Key="ScrollBarThumb" Color="Gray"/>
    <SolidColorBrush x:Key="ScrollBarThumbHover" Color="LightGray"/>

    <!-- Стили для элементов ListView -->
    <SolidColorBrush x:Key="ListItemHoverBackground" Color="#444444"/>
    <SolidColorBrush x:Key="ListItemHoverForeground" Color="White"/>

    <SolidColorBrush x:Key="ListItemSelectedBackground" Color="#666666"/>
    <SolidColorBrush x:Key="ListItemSelectedForeground" Color="White"/>

</ResourceDictionary>